<% if current_user.favorite?(micropost) %>
  <%#= form_tag(favorites_path(micropost.id), html: { method: :delete, style: 'display: inline;' }) do %>
  <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete, style: 'display: inline;' }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= submit_tag 'Unfavorite', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%#= form_tag(favorites_path) do %>
  <%= form_for(current_user.favorites.build, html: { style: 'display: inline;' }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= submit_tag 'Favorite', class: 'btn btn-success btn-xs' %>
  <% end %>
<% end %>